### Joining

#!csharp

var joiningLambdaSyntax = customers.Join(orders,      
            c => c.CustomerId,o => o.CustomerId,      
            (c, o) => new          
                {              
                    c.CustomerId,              
                    c.Name,              
                    o.OrderID,              
                    o.Cost          
                }     
            );

var joiningQuerySyntax =    from c in customers           
                            join o in orders on            
                            c.CustomerId equals o.CustomerId           
                            select new            
                            {               
                                c.CustomerId,
                                c.Name,                
                                o.OrderID,                
                                o.Cost           
                            }; 

joiningQuerySyntax

